
<div>
  


    @using (Html.BeginForm("EstimativaProjeto", "Atividade"))
    {
        <fieldset>
            <legend>Consultar estimativa dos projetos</legend>

            <div class="form-inline">
                <label>Selecione um projeto</label>
                @Html.DropDownList("idProjeto", new SelectList(new DAL.Classes.BO.ProjetoBO().ListarProjetos(), "IdProjeto", "Nome"), new { @class = "form-control" })
            </div>

            <input type="submit" value="Gerar" class="btn btn-primary" />
        </fieldset>
    }


</div>
