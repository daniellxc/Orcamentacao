@model DAL.Classes.DTO.RecursoDTO

<div class="row">
    <div class="col-lg-4">
        <fieldset>
            <legend>Cadastrar Recurso</legend>
            <div class="form-group">
                @Html.Label("Nome do Recurso")
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <div class="form-group">
                @Html.Label("Alias")
                @Html.TextBoxFor(model => model.Alias, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Alias)
            </div>
            <div class="form-group">
                @Html.Label("Ativo")
                @Html.EditorFor(model => model.Ativo, new { @class = "form-control" })
               
            </div>
            @if (Model != null)
            { @Html.HiddenFor(model => model.IdRecurso) }

        </fieldset>

    </div>
</div>